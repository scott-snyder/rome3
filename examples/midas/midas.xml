<ROMEFrameworkDefinition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="c:/rome/rome.xsd">
	<Experiment>
		<ExperimentShortCut>MID</ExperimentShortCut>
		<ProgramName>Analyzer</ProgramName>
	</Experiment>
	<Folders>
		<Folder>
			<FolderName>Data</FolderName>
			<Field>
				<FieldName>ADC</FieldName>
				<FieldType>Int_t</FieldType>
				<ArraySize>8</ArraySize>
				<FieldComment>ADC Values</FieldComment>
			</Field>
			<Field>
				<FieldName>TDC</FieldName>
				<FieldType>Int_t</FieldType>
				<ArraySize>8</ArraySize>
				<FieldComment>TDC Values</FieldComment>
			</Field>
		</Folder>
		<Folder>
			<FolderName>ODB</FolderName>
			<DataBaseAccess>true</DataBaseAccess>
			<Field>
				<FieldName>RunNumber</FieldName>
				<FieldType>Int_t</FieldType>
				<FieldComment>Runinfo/Run number</FieldComment>
				<DataBaseName>odb</DataBaseName>
				<DataBasePath>"/Runinfo/Run number"</DataBasePath>
			</Field>
			<Field>
				<FieldName>StartTime</FieldName>
				<FieldType>ROMEString</FieldType>
				<FieldComment>Runinfo/Start time</FieldComment>
				<DataBaseName>odb</DataBaseName>
				<DataBasePath>"/Runinfo/Start time"</DataBasePath>
			</Field>
		</Folder>
	</Folders>
	<Trees>
		<Tree>
			<TreeName>run</TreeName>
			<Branch>
				<BranchName>Data</BranchName>
				<RelatedFolder>Data</RelatedFolder>
			</Branch>
		</Tree>
	</Trees>
	<Tasks>
		<Task>
			<TaskName>PrintValues</TaskName>
			<SteeringParameters>
				<SteeringParameterField>
					<SPFieldName>TaskTestValue</SPFieldName>
					<SPFieldType>int</SPFieldType>
					<SPFieldHotLink>true</SPFieldHotLink>
				</SteeringParameterField>
			</SteeringParameters>
		</Task>
		<Task>
			<TaskName>FillHistogram</TaskName>
			<Histogram>
				<HistName>ADC</HistName>
				<HistFolderName>adc</HistFolderName>
				<HistArraySize>8</HistArraySize>
				<HistType>TH1F</HistType>
				<HistXLabel>ADC</HistXLabel>
				<HistYLabel>Entries</HistYLabel>
				<HistXNbins>100</HistXNbins>
				<HistXmin>0</HistXmin>
				<HistXmax>1024</HistXmax>
			</Histogram>
		</Task>
	</Tasks>
	<Tabs>
		<Tab>
			<TabName>ADCTab</TabName>
			<TabTitle>ADC</TabTitle>
		</Tab>
	</Tabs>
	<GlobalSteeringParameters>
		<SteeringParameterField>
			<SPFieldName>TestValue</SPFieldName>
			<SPFieldType>int</SPFieldType>
			<SPFieldHotLink>true</SPFieldHotLink>
		</SteeringParameterField>
	</GlobalSteeringParameters>
	<Tree>
		<TreeName>run</TreeName>
		<Branch>
			<BranchName>data</BranchName>
			<RelatedFolder>Data</RelatedFolder>
		</Branch>
	</Tree>
	<MidasBanks>
		<EventDefinition>
			<EventName>Trigger</EventName>
			<EventID>1</EventID>
			<EventTriggerMask>-1</EventTriggerMask>
			<EventSamplingRate>2</EventSamplingRate>
			<Banks>
				<Bank>
					<BankName>ADC0</BankName>
					<BankType>WORD</BankType>
				</Bank>
				<Bank>
					<BankName>TDC0</BankName>
					<BankType>WORD</BankType>
				</Bank>
				<StructuredBank>
					<BankName>STRT</BankName>
					<BankField>
						<BankFieldName>STRH</BankFieldName>
						<BankFieldType>WORD</BankFieldType>
					</BankField>
					<BankField>
						<BankFieldName>STRD</BankFieldName>
						<BankFieldType>WORD</BankFieldType>
					</BankField>
				</StructuredBank>
			</Banks>
		</EventDefinition>
		<EventDefinition>
			<EventName>Scaler</EventName>
			<EventID>2</EventID>
			<EventTriggerMask>-1</EventTriggerMask>
			<EventSamplingRate>2</EventSamplingRate>
			<Banks>
				<Bank>
					<BankName>SCLR</BankName>
					<BankType>WORD</BankType>
				</Bank>
			</Banks>
		</EventDefinition>
		<EventDefinition>
			<EventName>Environment</EventName>
			<EventID>5</EventID>
			<EventTriggerMask>-1</EventTriggerMask>
			<EventSamplingRate>2</EventSamplingRate>
			<Banks>
				<Bank>
					<BankName>INPT</BankName>
					<BankType>Float_t</BankType>
				</Bank>
			</Banks>
		</EventDefinition>
	</MidasBanks>
</ROMEFrameworkDefinition>
